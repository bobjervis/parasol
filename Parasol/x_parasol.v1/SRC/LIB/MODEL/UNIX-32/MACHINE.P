/*
	Returns:

		-1 if key is less than entry,
		0 if key equals entry,
		1 if key is greater than entry
 */
symbolCompare:	(key: pointer, tableEntry: pointer) int =
	{
	sd:	ref _symbolDescriptor;
	s1, s2:	ref char;

	sd = tableEntry;
	s1 = key;
	s2 = sd->name;
	while	(*s1 || *s2){
		if	(*s1 != *s2)
			return *s1 - *s2;
		s1++;
		s2++;
		}
	return 0;
	}

