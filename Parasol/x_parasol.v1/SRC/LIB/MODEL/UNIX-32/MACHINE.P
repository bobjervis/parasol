__symbols_t:	public	type	{ public:
	symbolCount:		size_t;
	symbolBase:		ref _symbolDescriptor;

lookup:	(key: ref char) pointer =
	{
	s:	ref _symbolDescriptor;

	s = bsearch(key, symbolBase, symbolCount, sizeof _symbolDescriptor,
				&symbolCompare);
	if	(s)
		return s->address;
	else
		return 0;
	}

