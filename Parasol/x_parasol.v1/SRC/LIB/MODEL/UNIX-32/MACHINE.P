bsearch:	public	(key: pointer, base: pointer, nelem: int, width: int,
				fcmp: * (pointer, pointer) int) pointer =
	{
	kmin:	ref char;
	probe:	ref char;
	i:	int;
	j:	int;

	kmin = base;
	while	(nelem > 0){
		i = nelem >> 1;
		probe = kmin + i * width;
		j = (*fcmp)(key, probe);
		if	(j == 0)
			return probe;
		else if	(j < 0)
			nelem = i;
		else	{
			kmin = probe + width;
			nelem -= i + 1;
			}
		}
	return 0;
	}

