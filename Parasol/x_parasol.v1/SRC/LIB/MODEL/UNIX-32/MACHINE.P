memCompare:	public	(ps1: pointer, ps2: pointer, n: size_t) int =
	{
	s1:	ref byte;
	s2:	ref byte;

	s1 = ps1;
	s2 = ps2;
	while	(n > 0){
		n--;
		if	(*s1 < *s2)
			return -1;
		else if	(*s1 > *s2)
			return 1;
		s1++;
		s2++;
		}
	return 0;
	}

